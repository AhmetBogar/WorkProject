@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th style="width:30px"></th>
                <th style="width:100px">Resim</th>
                <th style="width:200px">Kategori Adı</th>
                <th style="width:70px">Durumu</th>
                <th style="width:160px">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td><img src="@item.CategoryImage" width="80" /></td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryIsActive</td>
                    <td>
                        <a href="/Admin/UpdateCategory/@item.CategoryId" class="btn btn-success">Düzenle</a>
                        <a href="/Admin/DeleteCategory/@item.CategoryId" class="btn btn-danger px-4">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/AddCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>


